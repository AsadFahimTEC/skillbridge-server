model TutorProfile {
  id         String @id @default(uuid())
  userId     String @unique
  bio        String
  pricePerHr Int
  rating     Float  @default(0)

  user         User           @relation(fields: [userId], references: [id])
  categories   Category[]
  availability Availability[]
  bookings     Booking[]
  reviews      Review[]
}

model Category {
  id   String @id @default(uuid())
  name String @unique

  tutors TutorProfile[]
}

model Availability {
  id        String @id @default(uuid())
  tutorId   String
  day       String
  startTime String
  endTime   String

  tutor TutorProfile @relation(fields: [tutorId], references: [id])
}